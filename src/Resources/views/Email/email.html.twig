<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title></title>
</head>
<body>

    <div class="wrapper">

        {% if editmode %}

            <div class="alert alert-info">
                <strong>Admin:</strong> {{ 'Depending on your selected form, some placeholder like %s are available.'|trans({},'admin')|format('<code>%Text(firstname);</code>') }}
            </div>

            {% if document.getProperty('mail_disable_default_mail_body') != true %}
                <div class="alert alert-info"><strong>Admin:</strong> {{ 'Form data will be rendered automatically.'|trans({},'admin') }}</div>
            {% else %}
                <div class="alert alert-info"><strong>Admin:</strong> {{ 'Custom style mode has been activated. Please use placeholder like %s to display form value fields.'|trans({},'admin')|format('<code>%Text(firstname);</code>') }}</div>
            {% endif %}

        {% endif %}

        <table class="row">
            <tr>
                <th class="large-12 small-12 columns first last">
                    {{ pimcore_wysiwyg('text', {width: '500'}) }}
                </th>
            </tr>
        </table>

        {% if document.getProperty('mail_disable_default_mail_body') != true %}

            <table class="row">
                <tr>
                    <th class="large-12 small-12 columns first last">
                        {% if editmode != true %}
                            <p>%Text(body);</p>
                        {% else %}
                            <p class="formbuilder-placeholder-body">{{ 'Your form content will be placed here.'|trans({},'admin') }}</p>
                        {% endif %}
                    </th>
                </tr>
            </table>

        {% endif %}

    </div>

</body>
</html>

